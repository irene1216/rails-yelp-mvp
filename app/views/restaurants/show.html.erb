<div class="card-category" id="show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= @restaurant.name %>
</div>

<div class="card-product m-2">
  <div class="card-product-infos" style="in-line" id="card-infomation">
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone Number:<%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category %></p>
  </div>
</div>

<% @restaurant.reviews.each do |review| %>
  <div class="card-product m-2">
  <div class="card-product-infos" style="in-line">
    <p>Review: <%= review.content %></p>
    <p>Rating: <%= review.rating %></p>
  </div>
</div>
<% end %>
    <%= link_to "Add Review👩‍💻", new_restaurant_review_path(@restaurant), class: 'btn btn-outline-secondary m-2' %>
